<%= form_for(@forum_post) do |f| %>
  <% if @forum_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum_post.errors.count, "error") %> prohibited this forum_post from being saved:</h2>

      <ul>
      <% @forum_post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author, "Your First Name" %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :forum_id, "Forum Category" %><br>
    <%= f.select :forum_id, Forum.visible.active.collect{|f| [f.name, f.id]} %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field textarea">
    <%= f.text_area :body %>
  </div>
  <% if @forum_post.new_record? %>
  <div class="field">
    <%= f.label :antispam_value, raw("What is <strong>#{antispam_arg1} plus #{antispam_arg2}</strong> (Help us prevent spam)") %><br />
    <%= f.text_field :antispam_value %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
