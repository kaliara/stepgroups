<h1>Listing forum_posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Body</th>
    <th>Forum</th>
    <th>Views</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @forum_posts.each do |forum_post| %>
  <tr>
    <td><%= forum_post.author %></td>
    <td><%= forum_post.title %></td>
    <td><%= forum_post.body %></td>
    <td><%= forum_post.forum_id %></td>
    <td><%= forum_post.views %></td>
    <td><%= link_to 'Show', forum_post %></td>
    <td><%= link_to 'Edit', edit_forum_post_path(forum_post) %></td>
    <td><%= link_to 'Destroy', forum_post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

