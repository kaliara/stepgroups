<%= form_for(@motion) do |f| %>
  <% if @motion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@motion.errors.count, "error") %> prohibited this motion from being saved:</h2>

      <ul>
      <% @motion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :document_id %><br />
    <%= select_tag 'motion_document_id', option_groups_from_collection_for_select(@intergroup_sessions, :documents, :name, :id, :title, 1), :name => 'motion[document_id]' %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :vote_yes %><br />
    <%= f.number_field :vote_yes %>
  </div>
  <div class="field">
    <%= f.label :vote_no %><br />
    <%= f.number_field :vote_no %>
  </div>
  <div class="field">
    <%= f.label :vote_abstain %><br />
    <%= f.number_field :vote_abstain %>
  </div>
  <div class="field">
    <%= f.label :passes %><br />
    <%= f.check_box :passes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
