<h1>Listing contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Published?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.name %></td>
    <td><%= strip_tags content.value.truncate(50) %></td>
    <td><%= nice_boolean content.published %></td>
    <td><%= link_to 'Show', admin_content_path(content) %></td>
    <td><%= link_to 'Edit', edit_admin_content_path(content) %></td>
    <td><%= link_to 'Destroy', admin_content_path(content), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

