<h1>Listing districts</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @districts.each do |district| %>
  <tr>
    <td><%= district.name %></td>
    <td><%= link_to 'Show', admin_district_path(district) %></td>
    <td><%= link_to 'Edit', edit_admin_district_path(district) %></td>
    <td><%= link_to 'Remove', admin_district_path(district), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

