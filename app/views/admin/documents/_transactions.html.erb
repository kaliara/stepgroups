<div id="untied_transactions">
  <h3>Unassociated Transactions</h3>
  <ul>
    <% @transactions.each do |transaction| %>
    <li id="transaction_<%= transaction.id %>">
      (<%= transaction.pretty_timestamp %>) <%= number_to_currency transaction.amount %> - <%= transaction.description %>
      <%= form_tag update_admin_document_transaction_path(transaction), :method => :post, :remote => true do |f| %>
        <%= hidden_field_tag :document_id, document_id %>
        <%= submit_tag 'Add' %>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>