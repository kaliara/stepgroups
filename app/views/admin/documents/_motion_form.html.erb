    <%= f.label :title, :for => "title_#{motion_counter}" %><br />
    <%= f.text_field :title, :id => "title_#{motion_counter}" %>
  </div>
  <div class="field">
    <%= f.label :body, :for => "body_#{motion_counter}" %><br />
    <%= f.text_area :body, :id => "body_#{motion_counter}" %>
  </div>
  <div class="field">
    <%= f.label :vote_yes, :for => "vote_yes_#{motion_counter}" %><br />
    <%= f.number_field :vote_yes, :id => "vote_yes_#{motion_counter}" %>
  </div>
  <div class="field">
    <%= f.label :vote_no, :for => "vote_no_#{motion_counter}" %><br />
    <%= f.number_field :vote_no, :id => "vote_no_#{motion_counter}" %>
  </div>
  <div class="field">
    <%= f.label :vote_abstain, :for => "vote_abstain_#{motion_counter}" %><br />
    <%= f.number_field :vote_abstain, :id => "vote_abstain_#{motion_counter}" %>
  </div>
  <div class="field">
    <%= f.label :passes, :for => "passes_#{motion_counter}" %><br />
    <%= f.check_box :passes, :id => "passes_#{motion_counter}" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
