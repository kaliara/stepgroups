<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Intergroup session</th>
    <th>Document type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.intergroup_session.name unless document.intergroup_session.nil? %></td>
    <td><%= document.pretty_document_type %></td>
    <td><%= link_to 'Show', admin_document_path(document) %></td>
    <td><%= link_to 'Edit', edit_admin_document_path(document) %></td>
    <td><%= link_to 'Destroy', admin_document_path(document_path), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

