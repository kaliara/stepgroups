<%= form_for([:admin,@document], :remote => true) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :intergroup_session_id %> <span class="note">(optional)</span><br />
    <%= f.select :intergroup_session_id, [['-- None --', '']] + IntergroupSession.all.collect{|i| [i.name, i.id]} %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :document_type %><br />
    <%= f.select :document_type, Document::TYPES %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
