<h1>Listing Announcements</h1>

<table>
  <tr>
    <th>Header</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.header %></td>
    <td><%= announcement.body %></td>
    <td><%= link_to 'Show', admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Edit', edit_admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Remove', admin_announcement_path(announcement), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

