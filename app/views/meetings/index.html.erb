<h2>Meeting List</h2>

<table class="meeting_list" cellpadding="0" cellspacing="0">
<% District.all.each do |district| %>
  <tr>
    <td class="district" colspan="8"><h3><%= district.name %></h3></td>
  </tr>
  <tr>
    <th></th>
    <% Date::DAYNAMES.each do |day| %>
      <th><%= day[0..2].upcase %></th>
    <% end %>
  </tr>
  <% district.meeting_addresses.each do |meeting_address| %>
    <tr>
      <td><%= meeting_address.building %><br><%= meeting_address.street1 %> <%= meeting_address.street2 %></td>
      <% 7.times do |wday| %>
        <td>
          <% meeting_address.meetings.each do |meeting| %>
            <% if wday == meeting.wday %>
              <%= meeting.time %><%= raw "<br/>(" + meeting.topic + ")" unless meeting.topic.blank? %>
            <% end %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
<% end %>
</table>